<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form.inherit.l10n_gt_extra</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <label for="standard_price" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </label>
            <div name="standard_price_uom" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </div>
        </field>
    </record>

    <record id="product_variant_easy_edit_view" model="ir.ui.view">
        <field name="name">product.product.view.form.easy.inherit.l10n_gt_extra</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="standard_price" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </field>
      </field>
    </record>

    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.product.tree.inherit.l10n_gt_extra</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="standard_price" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </field>
        </field>
    </record>

</odoo>
